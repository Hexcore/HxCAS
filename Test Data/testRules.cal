ruleset Flood
{
	property land;
	property water;

	type Land : 0
	{
		if (self.water < 0)
		{
			var most = max(neighbours.water);
			var least = min(neighbours.water);
			
			
			if ((most < self.water) && (0 < 2))
			{
				most = max(neighbours.water);
				self.water--;
				most = self.land--;
			}
			else if (most == least)
			{
				self.water = most;
			}
			else
			{
				self.water = most - 1;
			}
		}
	}
	
	type WaterSource : 1
	{
		self.water = 100;
	}
}


colourset colours
{
	property bla
	{
		0 to 5 : rgb(0.5, 0.1, 0.2);
		5 to 10 : rgb(0.3, 0.1, 0.2);
	}
	
	property another
	{
		0 to 5 : rgb(0.5, 0.1, 0.2);
		5 to 10 : rgb(0.3, 0.1, 0.2);
	}
}

